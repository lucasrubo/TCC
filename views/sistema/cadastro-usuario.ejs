<%- include('header', {titulo:'Cadastro de Usuários'}); %>
<%- include('menu', {variant:'sistema'}); %>

  <!-- contact section -->

  <section class="contact_section layout_padding">
    <div class="custom_heading-container">
      <h3 class=" ">
        Cadastro de Usuários
      </h3>
    </div>
    <div class="container layout_padding2-top">
      <div class="row">
        <div class="col-md-6 mx-auto">
          <form action="/sistema/cadastrar-usuario-post" method="post">
            <div>
              <input name="name" id="name" type="text" placeholder="NOME">
            </div>
            <div>
              <input name="username" id="username" type="text" placeholder="USERNAME" required>
            </div>
            <div>
              <input name="email" id="email" type="email" placeholder="EMAIL" required>
            </div>
            <div>
              <select name="type" id="type" required>
                <option value="" disabled selected>Tipo de Usuário</option>
                <option value="admin">admin</option>
                <option value="normal">normal</option>
                <option value="sistema">sistema</option>
              </select>
            </div>
            <div>
              <input name="senha" id="senha" type="password" placeholder="PASSWORD" required>
            </div>
            <div class="d-flex justify-content-center ">
              <button>
                Cadastrar
              </button>
            </div>
          </form>
        </div>
      </div>

    </div>
  </section>

  <!-- end contact section -->
<%- include('footer'); %>
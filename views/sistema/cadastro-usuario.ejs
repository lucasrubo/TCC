<%- include('header', {titulo:'Cadastro de Usuários'}); %>
<%- include('menu', {variant:'sistema'}); %>
<style>
  .w3-margin-bottom{
    text-align: left;
  }
</style>

  <!-- contact section -->

  <section class="contact_section layout_padding">
    <div class="custom_heading-container">
      <h3 class=" ">
        Cadastro de Usuários
      </h3>
    </div>
    <div class="container layout_padding2-top">
      <div class="row">
        <div class="col-md-6 mx-auto">
          <form action="/sistema/cadastrar-usuario-post" method="post">
            <div class="row-n">
              <div class="col-md-6 w3-margin-bottom">
                <label><b>Usuário</b></label>
                <input class="w3-input w3-border" type="text" placeholder="" id="username" name="username" required>
              </div>
              <div class="col-md-6 w3-margin-bottom">
                <label><b>Senha</b></label>
                <input class="w3-input w3-border" type="password" placeholder="" id="senha" name="senha" required>
              </div>
            </div>
            <div class="row-n">
              <div class="col-md-7 w3-margin-bottom">
                <label><b>E-mail</b></label>
                <input class="w3-input w3-border" type="email" placeholder="" id="email" name="email" required>
              </div>
              <div class="col-md-5 w3-margin-bottom">
                <label><b>Tipo de usuário</b></label>
                <select name="type" id="type" required>
                  <option value="" disabled selected>Tipo de Usuário</option>
                  <option value="admin">admin</option>
                  <option value="normal">normal</option>
                  <option value="sistema">sistema</option>
                </select>
              </div>
            </div>
            <div class="row-n">
              <div class="col-md-7 w3-margin-bottom">
                <label><b>Empresa</b></label>
                <input class="w3-input w3-border" type="text" placeholder="" id="empresa" name="empresa" required>
              </div>
            </div>
            <div class="d-flex justify-content-center ">
              <button>
                Cadastrar
              </button>
            </div>
          </form>
        </div>
      </div>

    </div>
  </section>

  <!-- end contact section -->
<%- include('footer',{variant:''}); %>